@model StudentFormCsv.Models.Student

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="text-center mb-4">Student Details</h1>

    <div class="card mx-auto" style="max-width: 700px;">
        <div class="card-body">
            <h4 class="card-title">Student Information</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">First Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-2">Last Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-2">Age</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Age)</dd>

                <dt class="col-sm-2">Grade</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Grade)</dd>

                <dt class="col-sm-2">Address</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-2">Birth Date</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.BirthDate)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
       
    </div>
</div>
