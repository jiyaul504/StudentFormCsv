@model StudentFormCsv.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Student</h1>

    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this?</h3>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">First Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-4">Last Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-4">Age</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Age)</dd>

                <dt class="col-sm-4">Grade</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Grade)</dd>

                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">Birth Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BirthDate)</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

